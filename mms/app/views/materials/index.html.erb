
<% content_for :title, "Materials" %>

<h1>Materials</h1>

<div id="materials">
  <% @materials.each do |material| %>
    <% if material.user == current_user%>
      <%= render material %>
      <p>
        <%= link_to "Show this material", material %>
      </p>
    <%end%>
  <% end %>
</div>

<%= link_to "New material", new_material_path %>
